<h2>Create a New Account</h2>

<%= form_for(@customer) do |f| %>

  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h3 style="margin-left: 20px"><font color="red">There were some errors:</font></h3>

      <ul>
        <% @customer.errors.full_messages.each do |message| %>
        <font color="red"><li><%= message %></li></font>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :name, "Your Name: " %>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.submit  %>
<% end %>
<br>
<hr>
<center><%= link_to "Index of Blends", brews_path %> | <%= link_to "Index of Customers", customers_path %></center>
